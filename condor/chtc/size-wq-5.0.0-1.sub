# Condor submission file for R.

# EXECUTION FILE
universe    =   vanilla
batch_name  =   size-wq-5.0.0-1
initialdir  =   /home/spkent/omisvm-sims

executable  =   condor/chtc/size-wq-5.0.0-1.sh
arguments   =   $(Process)

# FILE TRANSFER
should_transfer_files = YES
when_to_transfer_output = ON_EXIT
